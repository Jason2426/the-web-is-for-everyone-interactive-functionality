<%- include('./partials/head') %>

    <link rel="stylesheet" href="/styles/detail.css">

    </head>

    <body>

        <%- include('./partials/navbar') %>

            <!-- One post to read -->
            <main>
                <section class="post">
                    <h2> <%- post[0].title.rendered %> </h2>
                    <section class="article_information">
                        <ul>
                            <li class="author_data">
                                <%= post[0].yoast_head_json.author %>
                            </li>
                            <li class="b_point">
                                •
                            </li>
                            <li class="category_data">
                                Category
                            </li>
                            <li class="b_point">
                                •
                            </li>
                            <li class="date_data">
                                Datum geplaatst
                            </li>
                        </ul>
                    </section>
                        
                        <img src="<%= post[0].jetpack_featured_media_url %>" class="article_image">

                    <section class="rest_information">
                        <div class="link_button_section">
                            <svg width="25px" height="25px" viewBox="0 0 24 24" fill="none" color="black" xmlns="http://www.w3.org/2000/svg">
                                <path d="M14.1625 18.4876L13.4417 19.2084C11.053 21.5971 7.18019 21.5971 4.79151 19.2084C2.40283 16.8198 2.40283 12.9469 4.79151 10.5583L5.51236 9.8374" stroke="#1C274C" stroke-width="1.5" stroke-linecap="round"/>
                                <path d="M9.8374 14.1625L14.1625 9.8374" stroke="#1C274C" stroke-width="1.5" stroke-linecap="round"/>
                                <path d="M9.8374 5.51236L10.5583 4.79151C12.9469 2.40283 16.8198 2.40283 19.2084 4.79151C21.5971 7.18019 21.5971 11.053 19.2084 13.4417L18.4876 14.1625" stroke="#1C274C" stroke-width="1.5" stroke-linecap="round"/>
                            </svg>
                            <button class="copy_button">Link Kopieren</button>
                        </div>
                        <p class="est_read_time">Leestijd : <%= post[0].yoast_head_json.twitter_misc["Geschatte leestijd"] %></p>
                    </section>

                        <section class="article_content">
                            <strong class="content_excerpt">
                                <%- post[0].excerpt.rendered %>
                            </strong>
                            <p class="actual_content">
                                <%- post[0].content.rendered %>
                            </p>
                        </section>
                </section>
            </main>

            <%- include('./partials/foot') %>